    draw_text(x+(250+(space*(r*3)))+2,y+2,string(res[r]));
    draw_set_alpha(1);
    draw_set_colour(c_gray);
    draw_text(x+(250+(space*(r*3))),y,string(res[r]));
    //Pulsing Selection
    if mpos=0
    {
        draw_set_alpha(alpha);
        draw_set_colour(global.text_pulse_color);
        if r == rpos
            {draw_text(x+(250+(space*(r*3))),y,string(res[r]));}
        draw_set_alpha(1);
    }
    else
    {
        draw_set_colour(global.text_pulse_color);
        if r == rpos
            {draw_text(x+(250+(space*(r*3))),y,string(res[r]));}
    }
}
