if input.bomb_press
{
    scr_save();
    instance_destroy();
    instance_activate_object(obj_menu);
    audio_stop_sound(sfx_menu_sel);
    audio_play_sound(sfx_menu_sel,1,false);
    exit;
}

if mpos==0 //All for the resolution thingy
{
    move = 0;
    move -= max(input.left,0);
    move += max(input.right,0);
    
    if move !=0
    {
        audio_stop_sound(sfx_menu_move);
        audio_play_sound(sfx_menu_move,1,false);
        rpos += move;
        if rpos &lt; 0
            {rpos = array_length_1d(res) -1;}
        if rpos &gt; array_length_1d(res) -1
            {rpos = 0;}
    }
}

var push = 0;
push = max(input.shoot_press,0);

if push == 1
{
    audio_stop_sound(sfx_menu_sel);
    audio_play_sound(sfx_menu_sel,1,false);
    switch mpos
    {
        case 0: //Resolution
            if rpos == 0
            {
                window_set_size(640,480);
                global.resolution=0;
            }
            if rpos == 1
            {
                window_set_size(960,720);
                global.resolution=1;
            }
            if rpos == 2
            {
                window_set_size(1280,960);
                global.resolution=2;
            }
            break;
        case 1: //BGM
            if global.bgm == 1
            {
                global.bgm = 0;
                audio_stop_all();
            }
            else 
            {
                global.bgm = 1;
                audio_play_sound(bgm_menu,10,true);
            }
            break;
        case 2: //Full Screen
            if global.fullscreen == 1
            {
                global.fullscreen = 0;
                window_set_fullscreen(false);
            }
            else
            {
                global.fullscreen = 1;
                window_set_size(display_get_width(),display_get_height());
                window_set_fullscreen(true);
            }
            break;
        case 3: //VSync
            if global.vsync == 1
            {
                display_reset(0, false);
                global.vsync=0;
            }
            else
            {
                display_reset(0, true);
                global.vsync=1;
            }
            break;
        case 4: //Scanlines
            global.scanlines = !global.scanlines;
            break;
        case 5: //Rebind Menu
            instance_deactivate_object(self);
            instance_create(x,y,obj_rebind_menu);
            break;
        case 6: //Back
            scr_save();
            instance_destroy();
            instance_activate_object(obj_menu);
            break;
    }
}

//On/Off part
if global.bgm == 1
    {on[0] = "On";}
else
